    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'stratmat'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=stratmat",
                    "--package=stratmat"
                ],
                "filter": {
                    "name": "stratmat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "BEVY_ASSET_ROOT": "${workspaceFolder}"
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'stratmat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=stratmat",
                    "--package=stratmat"
                ],
                "filter": {
                    "name": "stratmat",
                    "kind": "bin"
                }
            },
            "args": [
                "explode"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "BEVY_ASSET_ROOT": "${workspaceFolder}"
            },
        }
    ]
}